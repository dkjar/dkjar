<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wel_white"
    tools:context="com.dkjar.welcome.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/title_layout"
        android:orientation="vertical"
        style="@style/Wel_TextContainer">

        <TextView
            style="?attr/welcomeLargeTextStyle"
            android:id="@+id/wel_title"
            android:text="Dkjar"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/wel_text_primary_theme_light" />

        <TextView
            style="?attr/welcomeNormalTextStyle"
            android:id="@+id/wel_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/wel_indicator_color_primary_theme_light" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/title_layout"
        android:id="@+id/imageView6"
        android:scaleType="fitCenter"
        android:src="@drawable/dkjar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
